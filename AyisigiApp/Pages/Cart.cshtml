@page
@model CartModel

<div>
    <div class="text-center text-light display-6">Sepet</div>
    <table class="table  table-hover">
        <thead>
            <tr>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>ÜrünToplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
            {
                <tr>
                    <td>@line.Product.ProductName</td>
                    <td>@line.Quantity</td>
                    <td>@line.Product.ProductPrice.ToString("c")</td>
                    <td>@((line.Product.ProductPrice*line.Quantity).ToString("c2"))</td>
                    <td>
                        <form method="post" asp-page-handler="Remove">
                            <input type="hidden" name="id" value="@line.Product.ProductId"/>
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fa fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr> 
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">
                    Toplam: 
                </td>
                <td class="text-right text-danger">
                    @Model.Cart?.TotalValue().ToString("C2");
                </td>
            </tr>
        </tfoot>
    </table>
</div>
