@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId"/>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder="Wedding Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Ürün açıklaması" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" placeholder="Price" />
    </div>

    <div  class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model.ImageUrl" />
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-warning" type="submit">
                <i class="fa fa-save"></i>
                Update
                </button>
            <a asp-action="Index" class="btn btn-outline-warning">
                <i class="fa fa-list"></i>
                Weddings
            </a>
        </div>
    </div>
</form>