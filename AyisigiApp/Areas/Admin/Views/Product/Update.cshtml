@model Product

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Update">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId"/>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" placeholder="Wedding Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" placeholder="Price" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-warning" type="submit">
                <i class="fa fa-save"></i>
                Update
                </button>
            <a asp-action="Index" class="btn btn-outline-warning">
                <i class="fa fa-list"></i>
                Weddings
            </a>
        </div>
    </div>
</form>