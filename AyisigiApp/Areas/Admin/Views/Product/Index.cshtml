@model IEnumerable<Product>
<div class="text-center">
    <div class="display-6">Weddings</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-warning" asp-action="Create">
            <i class="fa fa-plus"></i>
            Yeni Kayıt</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Wedding Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product prd in Model )
            {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>@prd.ProductName</td>
                    <td>@prd.ProductPrice.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-success" asp-action="Update" asp-route-id="@prd.ProductId">
                                <i class="fa fa-edit"></i>
                                Güncelle
                                </a>
                            <a class="btn btn-outline-success" target="_blank" asp-area="" asp-controller="Product" asp-action="Get" asp-route-id="@prd.ProductId">
                                <i class="fa fa-search"></i>
                                </a>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">
                                <i class="fa fa-trash"></i>
                            </a> 
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
