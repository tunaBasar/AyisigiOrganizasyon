@model IEnumerable<Customer>
<div class="text-center">
    <div class="display-6">Müşteriler</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Müşteri Adı</th>
                <th>Mail</th>
                <th>Şifre</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerMail</td>
                    <td>@customer.CustomerPassword</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-success" asp-action="Update" asp-route-id="@customer.CustomerId">
                                <i class="fa fa-edit"></i>
                                Güncelle
                            </a>
                            <a class="btn btn-outline-success" target="_blank" asp-area="" asp-controller="Product"
                                asp-action="Get" asp-route-id="@customer.CustomerId">
                                <i class="fa fa-search"></i>
                            </a>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@customer.CustomerId">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>