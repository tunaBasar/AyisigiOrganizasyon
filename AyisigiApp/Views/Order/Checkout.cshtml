@model Order

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout" >
    <div class="form-group text-light my-3">
        <label asp-for="Name" >Çift Soyadı</label>
        <input class="form-control" asp-for="Name" >
    </div>

    <div class="form-group text-light my-3">
        <label asp-for="Line1" >Adres 1</label>
        <input class="form-control" asp-for="Line1" >
    </div>
    <div class="form-group text-light my-3">
        <label asp-for="Line1" >Adres 2</label>
        <input class="form-control" asp-for="Line1" >
    </div>

    <div class="form-group text-light my-3">
        <label asp-for="Line2" >Adres 3</label>
        <input class="form-control" asp-for="Line2" >
    </div>

    <div class="form-group text-light my-3">
        <label asp-for="Line3" >Adres 4</label>
        <input class="form-control" asp-for="Line3" >
    </div>

    <div class="form-group text-light my-3">
        <label asp-for="City" >Şehirz"</label>
        <input class="form-control" asp-for="City" >
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-warning">
            Complete Order
        </button>
    </div>
</form>