@model LoginModel

<div class="text-center my-5">
    
    <h6 class="display-6 text-light">
        <i class="fa-solid text-black fa-right-to-bracket bg-light p-3 rounded-5"></i>
        <br />
        Giriş 
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group text-light my-3">
                <label asp-for="Name">Kullanıcı Adı</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group text-light my-3">
                <label asp-for="Password">Şifre</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-warning">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Giriş
                </button>
            </div>
        </form>

        <div class="text-light">
            Hesabınız yok mu? <a asp-action="Register">kayıt ol.</a>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>